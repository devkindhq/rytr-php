{
    "name": "devkind/rytr-php",
    "description": "",
    "keywords": [
        "devkind",
        "rytr-php",
        "api"
    ],
    "homepage": "https://github.com/devkind/rytr-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Devkind Developer",
            "email": "backend@devkind.com.au",
            "role": "Developer"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/promises": "^1.3.1",
        "guzzlehttp/psr7": "^2.4.1",
        "nesbot/carbon": "^1.26.3 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Devkind\\RytrPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devkind\\RytrPhp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
